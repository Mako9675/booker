<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>

<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
<!-- 一覧表 -->
<div class="index-head">
  <span class="index-title">
    Title
  </span>
  <span class="index-title">
    Body
  </span>
  <span class="index-title"></span>
</div>
<div class="index-body">
  <span class="index-text">
    <%= book.title %>
  </span>
  <span class="index-text">
    <%= book.body %>
  </span>

    <%= link_to "Show", list_path(book.id) %>
    <%= link_to "Edit",edit_list_path(book.id),method: :get %>
    <%= link_to "Dlete",list_path(book.id),method: :delete, data: { confirm: "Are you sure？" } %>

    <% end %>
</div>


<!-- 投稿box -->
<div class="new">
  <h2>New book</h2>
  <%= form_with model: @books,url: '/lists',method: :post do |f| %>

  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
  <% end %>

</div>