<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>

<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
<!-- title -->
<p>Title Body</p>
<span>
  <%= link_to "Show", book_path(book.id) %>
  <p><%= book.title %></p>
  <p><%= book.body %></p>
</span>

<%= link_to "Edit",edit_book_path(book.id),method: :get %>
<%= link_to "Dlete",destroy_book_path(book.id),method: :delete, data: { confirm: "Are you sure？" } %>


<% end %>

<!-- 投稿box -->
<h2>New book</h2>
<%= form_with model: @books,url: '/lists',method: :post do |f| %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

 <h4>title</h4>
 <%= f.text_field :title %>

 <h4>body</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>
<% end %>
