<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>

<% end %>

<h1>Books</h1>
<!-- 一覧表 -->
<table class="head">
  <tr class="head-text">
    <th>Title</th>
    <th>Body</th>
    <th>     </th>
  </tr>
</table>

<% @books.each do |book| %>
<table class="body">
  <tr class="body-text">
    <td><%= book.title %></td>
    <td><%= book.body %></td>

    <%= link_to "Show", list_path(book.id) %>
    <%= link_to "Edit",edit_list_path(book.id),method: :get %>
    <%= link_to "Dlete",list_path(book.id),method: :delete, data: { confirm: "Are you sure？" } %>

    <% end %>
  </tr>
</div>
    


<!-- 投稿box -->
  <h2>New book</h2>
  <%= form_with model: @books,url: '/lists',method: :post do |f| %>

  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  <div class="new">
    <p class="new-text">Title</p>
    <%= f.text_field :title %>
  </div>
  <div class="new">
    <p class="new-text">Body</p>
    <%= f.text_area :body %>
  </div>

  <%= f.submit 'Create Book' %>
  <% end %>